extends layouts/main-layout.pug

block body
    body
        header.navbar.d-flex.justify-content-center(style="background-color: rgb(209, 206, 33);")
            h1(style="font-family: fantasy;") Movie-Chat

        main.container-fluid.row(style="padding:0px height: 700px;")
            .col-md-6(style="padding-top: 50px; padding-left: 200px;")
                img(src=details.Poster style="width:400px; height:600px;")
            .col-md-6(style="padding-top:60px;")
                h5 Title: 
                    strong #{details.Title}
                h5 Year: 
                    strong #{details.Year}
                h5 Rated: 
                    strong #{details.Rated}
                h5 Date of Release: 
                    strong #{details.Released}
                h5 Genre: 
                    strong #{details.Genre}
                h5 Director: 
                    strong #{details.Director}
                h5 Writers: 
                    strong #{details.Writer}
                h5 Actors: 
                    strong #{details.Actors}
                h5 Plot: 
                    strong #{details.Plot}
                h5 Language: 
                    strong #{details.Language}
                h5 Awards: 
                    strong #{details.Awards}
                h5 Ratings: 
                    br
                    each rating in details.Ratings
                        strong &emsp; #{rating.Source} : #{rating.Value}
                            br
                    
                    
                    

        

